                    <a class="nav-link" href="/adminpage">Dashboard</a>
                </li>
                
                <li class="nav-item active">
                    <a class="nav-link" href="">Post Job</a>
                </li>
               
                <li class="nav-item ">
                  <a class="nav-link" href="/admin/mail">Send Email</a>
              </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
    <div id="bluebg">    
        
        <% if(typeof errors != 'undefined') { %>
            <% errors.forEach(error => { %>
                <div class="alert">
                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
                    <%=error.message %>
                </div>
            <% }) %>
        <% } %>
    
        <% if(messages.success_msg) { %>
            <div class="alert pos">
                <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
                <%= messages.success_msg %>
            </div>
        <% } %>
       

<div class="cont postjob">
  
    <div class="form">
      <form action="/admin/postjob" method="POST">
        <h1>Post Job</h1>
        <center>
        <input type="text"
               class="user"
               placeholder="Name of Company"
               name="companyname">
        <input type="text"
               class="user"
               placeholder="Job Role"
               name="role"/>
        <input type="number"
               class="user"
               placeholder="Number of postings"
               name="qty" min="1"/>
        <input type="number"
               class="user"
               placeholder="Package in Rs"
               name="package" min="1"/>
        <input type="url" 
               class="pass"
               placeholder="Link to Apply"
               name="link"/>
        <input type="number" 
               class="user"
               placeholder="Minimun CGPA required"
               name="gpa" min="0" max="10"/>
        <input type="number" 
               class="user"
               placeholder="Maximum Backlogs Allowed"
               name="backs" min="0"/>
        <input type="text" 
               class="user"
               placeholder="Skills Required"
               name="skills"/>
        <select name="jobtype" id="jobtype" class="user" style="text-align-last: center;">
            <option value="Intern">Internship</option>
            <option value="Full Time">Full Time</option>
        </select><br>
        <button class="login" type="submit">Post Job</button>
    </center>
      </form>
    </div>
    
  
  </div>
        
    </div>
    
    
    
    
    
    <script src="/styles/landingpage.js"></script> 
    
